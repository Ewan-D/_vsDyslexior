---
layout: layouts/base
---

{% include "header.njk" %}

<div id="post" class="p-2 max-w-2xl">
	<h1 class="font-bold text-4xl mt-3 mb-6">{{ title }}</h1>

    <div class="mb-3">
        <time datetime="{{ page.date | dateToString }}">~ {{ page.date | readableDate }}</time>
    </div>
        {{ content | safe }}

<div class="inline" aria-labelledby="currentPostsTagsList">
      <h3 class="hidden" id="tagList">current posts tags list:</h3>
      <ul class="inline">

          {% for tag in tags | tagFilter('post') %}
              <li class="inline px-1 bg-gray-200 eleventyTag">
                  {% set tagUrl %}/tagged/{{ tag | slug }}/{% endset %}
                  <a href="{{ tagUrl | url }}">{{ tag }}</a>
              </li>
          {% endfor %}
      </ul>
      </div>

{% include "postsNav.njk" %}

</div>
