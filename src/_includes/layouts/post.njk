---
layout: layouts/base
---

{% include "header.njk" %}

<div id="post" class="p-2 max-w-2xl">
	<h1 class="font-bold text-4xl mt-3 mb-6">{{ title }}</h1>

    <div class="mb-3 text-gray-700">
        <time datetime="{{ page.date | dateToString }}">~ {{ page.date | readableDate }}</time>
    </div>
        {{ content | safe }}

<div class="flex flex-initial mt-7" aria-labelledby="currentPostsTagsList">
{% set checkForTags = tags | tagFilter('post')  %}

      <h3 class="font-bold mr-2 {% if checkForTags == 0 %} hidden {% endif %}" id="tagList">This post is tagged with:</h3>
      <ul class="flex space-x-1">
          {% for tag in checkForTags %}
              <li class="underline tagged eleventyTag">
                  {% set tagUrl %}/tagged/{{ tag | slug }}/{% endset %}
                  <a href="{{ tagUrl | url }}">{{ tag }}</a>
              </li>
          {% endfor %}
      </ul>
      </div>

{% include "postsNav.njk" %}

</div>
