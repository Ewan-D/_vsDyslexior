<img id="pygmPossum" src="/img/cbe769c4-300.jpeg" alt="illustration of pygm possum flying with a red ballon. A homage to 11ty mascot" width="300px">

  <script>
    pygmPossum.onclick = function() {
      let start = Date.now();

      let timer = setInterval(function() {
        let timePassed = Date.now() - start;

        pygmPossum.style.left = timePassed / 5 + 'px';

        if (timePassed > 2000) clearInterval(timer);

      }, 20);
    }
  </script>

